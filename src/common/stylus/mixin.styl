border-1px-bottom($color)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color

border-1px-top($color)
  position: relative
  &:before
    content: ''
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    border-top: 1px solid $color

